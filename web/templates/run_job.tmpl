{{define "run-job"}}
    <!DOCTYPE html>
    <html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ .BrandName }} - Run Job</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/static/css/dark-theme.css" rel="stylesheet">
        {{ template "favicon" . }}
    </head>
    <body>
    {{ template "navbar" . }}

    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="d-flex gap-3 align-items-center">
                        <h5 class="card-title mb-0">Run Job - {{.Job.Name}}</h5>
                                <a href="/projects/{{ .Project.ID}}" class="btn-primary btn-sm btn">Back to Project</a>
                            </div>
                        </div>
                        {{if .Error}}
                            <div class="alert alert-danger" role="alert">
                                {{.Error}}
                            </div>
                        {{end}}

                        <form method="POST" action="/projects/{{.Project.ID}}/jobs/{{.Job.ID}}/run"
                              {{if .Job.RequiresFileUpload}}enctype="multipart/form-data"{{end}}>

                            {{range .Job.Arguments}}
                                <div class="mb-3">
                                    <label class="form-label">{{.Name}}</label>
                                    {{if .AllowedValues}}
                                        <select class="form-select" name="arg_{{.Name}}" required>
                                            {{range .AllowedValues}}
                                                <option value="{{.}}" {{if eq . $.DefaultValue}}selected{{end}}>{{.}}</option>
                                            {{end}}
                                        </select>
                                    {{else}}
                                        {{if .Sensitive}}
                                            <input type="password"
                                                   class="form-control"
                                                   name="arg_{{.Name}}"
                                                   value="{{.DefaultValue}}"
                                                   required>
                                        {{else if eq .Type "number"}}
                                            <input type="number"
                                                   step="any"
                                                   class="form-control"
                                                   name="arg_{{.Name}}"
                                                   value="{{.DefaultValue}}"
                                                   required>
                                        {{else if eq .Type "date"}}
                                            <input type="date"
                                                   class="form-control"
                                                   name="arg_{{.Name}}"
                                                   value="{{.DefaultValue}}"
                                                   required>
                                        {{else if eq .Type "datetime"}}
                                            <input type="datetime-local"
                                                   class="form-control"
                                                   name="arg_{{.Name}}"
                                                   value="{{.DefaultValue}}"
                                                   required>
                                        {{else}}
                                            <input type="text"
                                                   class="form-control"
                                                   name="arg_{{.Name}}"
                                                   value="{{.DefaultValue}}"
                                                   required>
                                        {{end}}
                                    {{end}}
                                </div>
                            {{end}}

                            {{if .Job.RequiresFileUpload}}
                                <div class="mb-3">
                                    <label for="file" class="form-label">File Upload</label>
                                    <input type="file" class="form-control" id="file" name="file" required>
                                </div>
                            {{end}}

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Run Job</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
{{end}}