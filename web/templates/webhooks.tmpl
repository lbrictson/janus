{{define "webhooks"}}
    <!DOCTYPE html>
    <html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ .BrandName }} - Webhooks</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/static/css/dark-theme.css" rel="stylesheet">
        {{ template "favicon" . }}
    </head>
    <body>
    {{ template "navbar" . }}

    <div class="container py-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex gap-3 align-items-center">
                        <h5 class="card-title mb-0">Webhooks</h5>
                        <a href="/webhooks/new" class="btn btn-primary">Create Webhook</a>
                    </div>
                    <input type="text" class="form-control w-auto" id="webhookSearch"
                           placeholder="Search webhooks..." onkeyup="filterWebhooks()">
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="webhooksTable">
                        <thead>
                        <tr>
                            <th>Webhook</th>
                            <th>Target Job</th>
                            <th>API Key Required</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{range .Webhooks}}
                            <tr>
                                <td>
                                    <button class="btn btn-outline-light btn-sm"
                                            onclick="showWebhookURL('{{.URL}}')">View URL</button>
                                </td>
                                <td>
                                    <a class="btn-outline-light btn btn-sm"
                                       href="{{ .JobLink }}">{{.JobName}} ({{.ProjectName}})</a>
                                </td>
                                <td>
                                    {{if .RequireAPIKey}}
                                        <span class="badge bg-success">Yes</span>
                                        <button class="btn btn-outline-info btn-sm ms-2"
                                                onclick="showAPIKey('{{.APIKey}}')">View API Key</button>
                                    {{else}}
                                        <span class="badge bg-secondary">No</span>
                                    {{end}}
                                </td>
                                <td>
                                    <button onclick="confirmDelete('{{.ID}}')"
                                            class="btn btn-outline-danger btn-sm">Delete</button>
                                </td>
                            </tr>
                        {{end}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- URL Modal -->
    <div class="modal fade" id="urlModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Webhook URL</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="text" class="form-control font-monospace" id="webhookURL" readonly>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="copyURL()">Copy</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- API Key Modal -->
    <div class="modal fade" id="apiKeyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">API Key</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">API Key (include in X-API-KEY header)</label>
                        <input type="text" class="form-control font-monospace" id="apiKeyValue" readonly>
                    </div>
                    <div class="alert alert-info">
                        <strong>Example usage:</strong>
                        <pre class="mb-0">curl -X POST \
  -H "X-API-KEY: &lt;api-key&gt;" \
  &lt;webhook-url&gt;</pre>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="copyAPIKey()">Copy API Key</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{if .NewWebhook}}
    <!-- New Webhook Created Modal -->
    <div class="modal fade" id="newWebhookModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Webhook Created Successfully</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>Important:</strong> Save this API key now. You can view it again later from the webhooks list.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Webhook URL</label>
                        <input type="text" class="form-control font-monospace" value="{{.NewWebhook.URL}}" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">API Key (Required in X-API-KEY header)</label>
                        <input type="text" class="form-control font-monospace" id="newApiKey" value="{{.NewWebhook.APIKey}}" readonly>
                    </div>
                    <div class="alert alert-info">
                        <strong>Example usage:</strong>
                        <pre class="mb-0">curl -X POST \
  -H "X-API-KEY: {{.NewWebhook.APIKey}}" \
  {{.NewWebhook.URL}}</pre>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="copyNewAPIKey()">Copy API Key</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    {{end}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const urlModal = new bootstrap.Modal(document.getElementById('urlModal'));
        const apiKeyModal = new bootstrap.Modal(document.getElementById('apiKeyModal'));
        {{if .NewWebhook}}
        const newWebhookModal = new bootstrap.Modal(document.getElementById('newWebhookModal'));
        // Show the new webhook modal on page load
        document.addEventListener('DOMContentLoaded', function() {
            newWebhookModal.show();
        });
        {{end}}

        function showWebhookURL(url) {
            document.getElementById('webhookURL').value = url;
            urlModal.show();
        }

        function showAPIKey(apiKey) {
            document.getElementById('apiKeyValue').value = apiKey;
            apiKeyModal.show();
        }

        function copyURL() {
            const url = document.getElementById('webhookURL');
            url.select();
            document.execCommand('copy');
            url.blur();

            // Show feedback
            const button = document.querySelector('#urlModal .modal-footer .btn-primary');
            const originalText = button.textContent;
            button.textContent = 'Copied!';
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }

        function copyAPIKey() {
            const apiKey = document.getElementById('apiKeyValue');
            apiKey.select();
            document.execCommand('copy');
            apiKey.blur();

            const button = document.querySelector('#apiKeyModal .modal-footer .btn-primary');
            const originalText = button.textContent;
            button.textContent = 'Copied!';
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }

        function copyNewAPIKey() {
            const apiKey = document.getElementById('newApiKey');
            apiKey.select();
            document.execCommand('copy');
            apiKey.blur();

            const button = document.querySelector('#newWebhookModal .modal-footer .btn-primary');
            const originalText = button.textContent;
            button.textContent = 'Copied!';
            setTimeout(() => {
                button.textContent = originalText;
            }, 2000);
        }

        function filterWebhooks() {
            const input = document.getElementById('webhookSearch');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('webhooksTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let text = '';
                for (let j = 0; j < cells.length - 1; j++) {
                    text += cells[j].textContent || cells[j].innerText;
                }
                if (text.toLowerCase().indexOf(filter) > -1) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }

        function confirmDelete(webhookId) {
            if (confirm('Are you sure you want to delete this webhook?')) {
                window.location.href = `/webhooks/${webhookId}/delete`;
            }
        }
    </script>
    </body>
    </html>
{{end}}

{{define "new-webhook"}}
    <!DOCTYPE html>
    <html lang="en" data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ .BrandName }} - New Webhook</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
        <link href="/static/css/dark-theme.css" rel="stylesheet">
        {{ template "favicon" . }}
    </head>
    <body>
    {{ template "navbar" . }}

    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title mb-0">Create Webhook</h5>
                            <a href="/webhooks" class="btn btn-primary">Back to Webhooks</a>
                        </div>

                        {{if .Error}}
                            <div class="alert alert-danger" role="alert">
                                {{.Error}}
                            </div>
                        {{end}}

                        <form method="POST" action="/webhooks/new">
                            <div class="mb-3">
                                <label for="jobId" class="form-label">Target Job</label>
                                <select class="form-select select2" id="jobId" name="job_id" required>
                                    <option value="">Select a job...</option>
                                    {{range .Jobs}}
                                        <option value="{{.ID}}">{{.Name}} in project {{.Edges.Project.Name}}</option>
                                    {{end}}
                                </select>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="requireApiKey" name="require_api_key">
                                    <label class="form-check-label" for="requireApiKey">
                                        Require API Key Authentication (X-API-KEY header)
                                    </label>
                                    <div class="form-text">When enabled, webhook requests must include a valid API key in the X-API-KEY header</div>
                                </div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Create Webhook</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
        });
    </script>
    </body>
    </html>
{{end}}